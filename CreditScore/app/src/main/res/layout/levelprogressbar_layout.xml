<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/level1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="青铜"/>
        <Button
            android:id="@+id/level2"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="白银"/>
        <Button
            android:id="@+id/level3"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="黄金"/>
        <Button
            android:id="@+id/level4"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="铂金"/>
    </LinearLayout>
    <com.xl.test.LevelProgressBar

        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:LevelTextChooseColor="#000000"
        app:LevelTextSize="15sp"
        app:LevelTextUnChooseColor="#999999"
        app:ProgressBarBGColor="#cccccc"
        app:ProgressBarStartColor="#ccffcc"
        app:ProgressBarEndColor="#00ff00"
        app:progressBraHeight="10dp"
        />

</RelativeLayout>